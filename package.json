{
	"publisher": "HugeBlack",
	"icon": "icon.png",
	"repository": {"url": "https://github.com/hugeBlack/McfDebugger_Extension"},
	"name": "mcfdebugger",
	"displayName": "Debugger for Minecraft Function",
	"description": "A debugger that debugs minecraft function with several useful features.",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Debuggers"
	],
	"activationEvents": [
		"onCommand:mcfdebugger.forceStart",
		"onLanguage:mcfunction"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mcfdebugger.forceStart",
				"title": "mcfdebugger:Hello World"
			}
		],
		"breakpoints": [
			{
				"language": "mcfunction"
			}
		],
		"debuggers": [
			{
				"type": "mcf",
				"label": "mcf",
				"languages": [
					"mcfunction"
				],
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"port"
						],
						"properties": {
							"port": {
								"type": "integer",
								"description": "port",
								"default": 1453
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "mcf",
						"request": "launch",
						"name": "Start Debugging",
						"port": 1453
					}
				],
				"configurationSnippets": [
					{
						"label": "Minecraft Function Debug: Launch",
						"description": "A new configuration for debugging functions of a datapack.",
						"body": {
							"type": "mcf",
							"request": "launch",
							"name": "Start Debugging",
							"port": 1453
						}
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.53.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"@types/ws": "^7.4.0",
		"await-notify": "1.0.1",
		"vscode-debugadapter": "^1.44.0",
		"ws": "^7.4.3"
	},
	"dependencies": {
		"@types/ws": "^7.4.0",
		"await-notify": "1.0.1",
		"vscode-debugadapter": "^1.44.0",
		"ws": "^7.4.3"
	}
}